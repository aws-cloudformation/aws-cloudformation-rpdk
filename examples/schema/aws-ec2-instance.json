{
    "$id": "aws-ec2-instance.json",
    "typeName": "AWS::EC2::Instance",
    "definitions": {
        "Ebs": {
            "type": "object",
            "properties": {
                "DeleteOnTermination": {
                    "type": "boolean"
                },
                "Encrypted": {
                    "type": "boolean"
                },
                "Iops": {
                    "type": "integer"
                },
                "SnapshotId": {
                    "type": "string"
                },
                "VolumeSize": {
                    "type": "integer"
                },
                "VolumeType": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "BlockDeviceMapping": {
            "type": "object",
            "properties": {
                "DeviceName": {
                    "type": "string"
                },
                "Ebs": {
                    "$ref": "#/definitions/Ebs"
                },
                "NoDevice": {
                    "type": "string"
                },
                "VirtualName": {
                    "type": "string",
                    "pattern": "^(ephemeral)[0-9]+$"
                }
            },
            "additionalProperties": false,
            "description": "Only one of \"Ebs\" and \"VirtualName\" can be specified",
            "oneOf": [
                {
                    "required": [
                        "DeviceName",
                        "Ebs"
                    ]
                },
                {
                    "required": [
                        "DeviceName",
                        "VirtualName"
                    ]
                }
            ]
        },
        "CreditSpecification": {
            "type": "object",
            "properties": {
                "CPUCredits": {
                    "type": "string",
                    "enum": [
                        "unlimited",
                        "standard"
                    ],
                    "default": "standard"
                }
            },
            "additionalProperties": false
        },
        "ElasticGpuSpecification": {
            "type": "object",
            "properties": {
                "Type": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "Type"
            ]
        },
        "InstanceIpv6Address": {
            "type": "object",
            "properties": {
                "Ipv6Address": {
                    "$ref": "common.types.v1.json#/definitions/ipv6Address"
                }
            },
            "additionalProperties": false,
            "required": [
                "Ipv6Address"
            ]
        },
        "LaunchTemplateSpecification": {
            "type": "object",
            "properties": {
                "LaunchTemplateId": {
                    "type": "string"
                },
                "LaunchTemplateName": {
                    "type": "string"
                },
                "Version": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "Version"
            ]
        },
        "PrivateIpAddressSpecification": {
            "type": "object",
            "properties": {
                "Primary": {
                    "type": "boolean"
                },
                "PrivateIpAddress": {
                    "$ref": "common.types.v1.json#/definitions/ipv4Address"
                }
            },
            "additionalProperties": false,
            "required": [
                "Primary",
                "PrivateIpAddress"
            ]
        },
        "NetworkInterface": {
            "type": "object",
            "properties": {
                "AssociatePublicIpAddress": {
                    "type": "boolean"
                },
                "DeleteOnTermination": {
                    "type": "boolean"
                },
                "Description": {
                    "type": "string"
                },
                "DeviceIndex": {
                    "type": "string"
                },
                "GroupSet": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "Ipv6AddressCount": {
                    "type": "integer"
                },
                "Ipv6Addresses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/InstanceIpv6Address"
                    }
                },
                "NetworkInterfaceId": {
                    "type": "string"
                },
                "PrivateIpAddress": {
                    "$ref": "common.types.v1.json#/definitions/ipv4Address"
                },
                "PrivateIpAddresses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/PrivateIpAddressSpecification"
                    }
                },
                "SecondaryPrivateIpAddressCount": {
                    "type": "integer"
                },
                "SubnetId": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "description": "One of \"SubnetId\", \"NetworkInterfaceId\" must be specified.",
            "oneOf": [
                {
                    "required": [
                        "DeviceIndex",
                        "NetworkInterfaceId"
                    ]
                },
                {
                    "required": [
                        "DeviceIndex",
                        "SubnetId"
                    ]
                }
            ]
        },
        "AssociationParameter": {
            "type": "object",
            "properties": {
                "Key": {
                    "type": "string"
                },
                "Value": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "Key",
                "Value"
            ]
        },
        "SsmAssociation": {
            "type": "object",
            "properties": {
                "AssociationParameters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AssociationParameter"
                    }
                },
                "DocumentName": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "DocumentName"
            ]
        },
        "Volume": {
            "type": "object",
            "properties": {
                "Device": {
                    "type": "string"
                },
                "VolumeId": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "Device",
                "VolumeId"
            ]
        }
    },
    "properties": {
        "AdditionalInfo": {
            "type": "string"
        },
        "Affinity": {
            "type": "string",

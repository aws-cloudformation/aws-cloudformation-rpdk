                    "$ref": "../common.types.v1.json#/definitions/Ipv6Address"
                }
            },
            "additionalProperties": false,
            "required": [
                "Ipv6Address"
            ]
        },
        "PrivateIpAddressSpecification": {
            "type": "object",
            "properties": {
                "Primary": {
                    "type": "boolean"
                },
                "PrivateIpAddress": {
                    "$ref": "../common.types.v1.json#/definitions/Ipv4Address"
                }
            },
            "additionalProperties": false,
            "required": [
                "Primary",
                "PrivateIpAddress"
            ]
        },
        "NetworkInterface": {
            "type": "object",
            "properties": {
                "AssociatePublicIpAddress": {
                    "type": "boolean"
                },
                "DelelteOnTermination": {
                    "type": "boolean"

{
	"$id": "aws.ec2.instance.v1.json",
	"definitions": {
		"iso-8601-utc": {
			"type": "string",
			"pattern": "^([0-2]\\d{3})-(0[0-9]|1[0-2])-([0-2]\\d|3[01])T([01]\\d|2[0-4]):([0-5]\\d):([0-6]\\d)((\\.\\d{3})?)Z$"
		},
		"Ebs": {
			"type": "object",
			"properties": {
				"DeleteOnTermination": {
					"type": "boolean"
				},
				"Encrypted": {
					"type": "boolean"
				},
				"Iops": {
					"type": "integer"
				},
				"SnapshotId": {
					"type": "string"
				},
				"VolumeSize": {
					"type": "integer"
				},
				"VolumeType": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"NoDevice": {
			"type": "object",
			"properties": {},
			"additionalProperties": false
		},
		"BlockDeviceMapping": {
			"type": "object",
			"properties": {
				"DeviceName": {
					"type": "string"
				},
				"Ebs": {
					"$ref": "#/definitions/Ebs"
				},
				"NoDevice": {
					"$ref": "#/definitions/NoDevice"
				},
				"VirtualName": {
					"type": "string",
					"pattern": "^(ephemeral)[0-9]+"
				}
			},
			"additionalProperties": false,
			"oneOf": [{
					"required": [
						"DeviceName", "Ebs"
					]
				},
				{
					"required": [
						"DeviceName", "VirtualName"
					]
				}
			]

		},

                "Ipv6AddressCount": {
                    "type": "integer"
                },
                "Ipv6Addresses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/InstanceIpv6Address"
                    }
                },
                "PrivateIpAddress": {
                    "$ref": "../common.types.v1.json#/definitions/Ipv4Address"
                },
                "PrivateIpAddresses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/PrivateIpAddressSpecification"
                    }
                },
                "SecondaryPrivateIpAddressCount": {
                    "type": "integer"
                }
            },
            "additionalProperties": false,
            "oneOf": [
                {
                    "properties": {
                        "DeviceIndex": {
                            "type": "string"
                        },
                        "NetworkInterfaceId": {
                            "type": "string"
                        }
                    }
                },
                {
                    "properties": {
                        "DeviceIndex": {
                            "type": "string"
                        },
                        "SubnetId": {
                            "$ref": "./aws.ec2.subnet.v1.json#/properties/Id"
                        }
                    }
                }
            ]
        },
        "AssociationParameter": {
            "type": "object",

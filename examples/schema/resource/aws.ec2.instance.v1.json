                "Key": {
                    "type": "string"
                },
                "Value": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "Key",
                "Value"
            ]
        },
        "SsmAssociation": {
            "type": "object",
            "properties": {
                "AssociationParameters": {
                    "type": "array",
